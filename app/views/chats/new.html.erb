<h1>New Chat</h1>

<div class="card shadow-sm p-4 col-md-8 mx-auto">
  <h2 class="mb-4"><i class="fas fa-comments me-2"></i>Nuevo Chat</h2>

  <%= form_with model: @chat do |f| %>
    <div class="mb-3">
      <%= f.label :sender_id, "Sender", class: 'form-label' %>
      <%= f.select :sender_id, User.all.collect { |u| [u.full_name, u.id] }, {}, class: 'form-select' %>
    </div>

    <div class="mb-4">
      <%= f.label :receiver_id, "Receiver", class: 'form-label' %>
      <%= f.select :receiver_id, User.all.collect { |u| [u.full_name, u.id] }, {}, class: 'form-select' %>
    </div>

    <div class="d-grid">
      <%= f.submit 'Start Chat', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<%= link_to 'Back', chats_path, class: 'btn btn-secondary' %>
