<h1>Message Details</h1>

<div class="card">
  <div class="card-body">
    <p><strong>ID:</strong> <%= @message.id %></p>
    <p><strong>Chat ID:</strong> <%= @message.chat_id %></p>
    <p><strong>Sender:</strong> 
      <%= @message.chat.sender.first_name if @message.chat && @message.chat.sender %>
    </p>
    <p><strong>Content:</strong> <%= @message.body %></p>
    <p><strong>Receiver:</strong> 
      <%= @message.chat.receiver.first_name if @message.chat && @message.chat.receiver %>
    </p>
    <p><strong>Created At:</strong> <%= @message.created_at %></p>
    <p><strong>Updated At:</strong> <%= @message.updated_at %></p>
    
    <%= link_to 'Back to Messages', messages_path, class: 'btn btn-secondary' %>
  </div>
</div>