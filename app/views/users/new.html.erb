<h1>New User</h1>

<%= form_with model: @user, class: 'card p-4 shadow-sm' do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  
    <div class="mb-3">
      <%= f.label :first_name, "First name", class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  
    <div class="mb-3">
      <%= f.label :last_name, "Last name", class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <%= link_to 'Cancel', users_path, class: 'btn btn-outline-secondary me-md-2' %>
      <%= f.submit 'Create User', class: 'btn btn-primary' %>
    </div>
  <% end %>

<%= link_to 'Back', users_path, class: 'btn btn-secondary' %>
 