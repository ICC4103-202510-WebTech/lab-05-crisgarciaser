<h1>New Message</h1>

<div class="card shadow-sm p-4">

  <%= form_with model: @message do |f| %>
    <div class="row g-3">
      <div class="col-md-6">
        <%= f.label :chat_id, "Chat", class: 'form-label' %>
        <%= f.select :chat_id, Chat.all.collect { |c| ["Chat ##{c.id}", c.id] }, {}, class: 'form-select' %>
      </div>

      <div class="col-md-6">
        <%= f.label :user_id, "Sender", class: 'form-label' %>
        <%= f.select :user_id, User.all.collect { |u| [u.full_name, u.id] }, {}, class: 'form-select' %>
      </div>

      <div class="col-12">
        <%= f.label :body, "Message", class: 'form-label' %>
        <%= f.text_area :body, rows: 4, class: 'form-control' %>
      </div>

      <div class="col-12 text-end">
        <%= f.submit 'Send Message', class: 'btn btn-primary px-4' %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Back', messages_path, class: 'btn btn-secondary' %>
