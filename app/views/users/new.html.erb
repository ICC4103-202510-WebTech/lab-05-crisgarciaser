<h1>New User</h1>

<%= form_with model: @user do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show mb-4">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <h5>Corrige estos errores:</h5>
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :email, "Correo electrÃ³nico", class: 'form-label' %>
    <%= f.email_field :email, class: "form-control #{'is-invalid' if @user.errors[:email].any?}" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div class="invalid-feedback d-block">
        <%= message %>
      </div>
    <% end %>
  </div>
  
    <div class="mb-3">
      <%= f.label :first_name, "First name", class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  
    <div class="mb-3">
      <%= f.label :last_name, "Last name", class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <%= f.submit 'Create User', class: 'btn btn-primary' %>
    </div>
  <% end %>

<%= link_to 'Back', users_path, class: 'btn btn-secondary' %>
 